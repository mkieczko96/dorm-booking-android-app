<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Rounded" parent="AppTheme">
        <item name="android:minWidth">72dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Rounded.Button" parent="AppTheme">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_primary_rounded</item>
        <item name="android:clickable">false</item>
        <item name="alpha">1.0</item>
    </style>

    <style name="Rounded.Label" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

</resources>