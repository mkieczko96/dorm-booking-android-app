                android:layout_row="15" />

            <TextView
                style="@style/Booker.DayView.TextView"
                android:layout_row="16"
                android:text="4 PM" />

            <View
                style="@style/Booker.DayView.HorizontalRule"
                android:layout_row="16" />

            <TextView
                style="@style/Booker.DayView.TextView"
                android:layout_row="17"
                android:text="5 PM" />

            <View
                style="@style/Booker.DayView.HorizontalRule"
                android:layout_row="17" />

            <TextView
                style="@style/Booker.DayView.TextView"
                android:layout_row="18"
                android:text="6 PM" />

            <View
                style="@style/Booker.DayView.HorizontalRule"
                android:layout_row="18" />

            <TextView
                style="@style/Booker.DayView.TextView"
                android:layout_row="19"
                android:text="7 PM" />

            <View
                style="@style/Booker.DayView.HorizontalRule"
                android:layout_row="19" />

            <TextView
                style="@style/Booker.DayView.TextView"
                android:layout_row="20"
                android:text="8 PM" />

            <View
                style="@style/Booker.DayView.HorizontalRule"
