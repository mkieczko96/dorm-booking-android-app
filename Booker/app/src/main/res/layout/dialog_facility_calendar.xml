                android:layout_row="21"
                android:text="9 PM" />

            <View
                style="@style/Booker.DayView.HorizontalRule"
                android:layout_row="21" />

            <TextView
                style="@style/Booker.DayView.TextView"
                android:layout_row="22"
                android:text="10 PM" />

            <View
                style="@style/Booker.DayView.HorizontalRule"
                android:layout_row="22" />

            <TextView
                style="@style/Booker.DayView.TextView"
                android:layout_row="23"
                android:text="11 PM" />

            <View
                style="@style/Booker.DayView.HorizontalRule"
                android:layout_row="23" />

        </GridLayout>

    </ScrollView>
</LinearLayout>